{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "jsx": "react",
    "module": "commonjs",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*"]
}
